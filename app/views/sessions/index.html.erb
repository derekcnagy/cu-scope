<h1>Login</h1>

<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<%= form_tag('/sessions/login') do %>
  <div>Username: <%= text_field_tag :username %></div>
  <div>Password: <%= password_field_tag :password %></div>
  <%= submit_tag "Login" %>
<% end %>

<%= link_to 'New User', :controller => :new_user, :action => :index %>
